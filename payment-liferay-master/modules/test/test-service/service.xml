<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.3.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_3_0.dtd">

<service-builder package-path="test">
	<namespace>localizationTest</namespace>
	<entity name="Greeting" local-service="true"
		local-service-impl="true" uuid="true">
		<local-service>
			<localized-entity>true</localized-entity>
		</local-service>
		<column name="greetingId" type="long" primary="true" />
		<column name="greeting" type="String" localizable="true"
			 default-locale="en" /> <!-- Add more localized columns as needed -->
		<column name="welcome" type="String" localizable="true"
			 default-locale="en" /> 
	</entity>
</service-builder>